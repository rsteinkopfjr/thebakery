<div id="orders">
    <div class="container">
        <div class="row">
            <div class="col-8 offset-2">
                <h1 style="text-align: center">{{msgOrd}}</h1>
                <br>
                <ul class="nav nav-tabs justify-content-center">
                    <li class="nav-item">
                        <a class="nav-link" href="dashboard">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="products">Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="orders">Orders</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="inquiries">Inquiries</a>
                    </li>
                </ul>
                <br>
                <h3>Orders</h3>
                <div class="row">
                    <div class="col-6">
                        <h4>New Orders:</h4>
                        <ul id="order-list" class="list-group">
                            {{#each orders}}
                            {{#unless this.completed}}
                            <li data-id="{{this.id}}" class="list-group-item">
                                <h5>Customer Name: {{this.firstname}} {{this.lastname}}</h5>
                                <h6>Email Address: {{this.email}}</h6>
                                <h6>Phone Number: {{this.phone}}</h6>
                                <h6>Requested PickUp: {{this.pickupdate}} @ {{this.pickuptime}}</h6>
                                <h6>Item: {{this.product}}</h6>
                                <h6>Quantity: {{this.quantity}}</h6>
                                <h6>Time Created: {{this.timestamp}}</h6>
                                <h6>Note: {{this.note}}</h6>
                                <button class="btn btn-success float-left complete">Completed</button>
                            </li>
                            {{/unless}}
                            {{/each}}
                        </ul>
                    </div>
                    <div class="col-6">
                        <h4>Completed Orders:</h4>
                        <ul id="completed-order-list" class="list-group">
                            {{#each orders}}
                            {{#if this.completed}}
                            <li data-id="{{this.id}}" class="list-group-item">
                                <h5>Customer Name: {{this.firstname}} {{this.lastname}}</h5>
                                <h6>Email Address: {{this.email}}</h6>
                                <h6>Phone Number: {{this.phone}}</h6>
                                <h6>Requested PickUp: {{this.pickupdate}} @ {{this.pickuptime}}</h6>
                                <h6>Item: {{this.product}}</h6>
                                <h6>Quantity: {{this.quantity}}</h6>
                                <h6>Time Created: {{this.timestamp}}</h6>
                                <h6>Note: {{this.note}}</h6>
                                <button class="btn btn-danger float-left delete">Delete</button>
                            </li>
                            {{/if}}
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>