<div id="products">
    <div class="container">
        <div class="row">
            <div class="col-8 offset-2">
                <h1 style="text-align: center">{{msgProd}}</h1>
                <br>
                <ul class="nav nav-tabs justify-content-center">
                    <li class="nav-item">
                        <a class="nav-link" href="dashboard">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="products">Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="orders">Orders</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="inquiries">Inquiries</a>
                    </li>
                </ul>
                <br>
                <h3>Products</h3>
                <br>
                <h4>Add a Product Below</h4>
                <form class="clearfix mb-4" action="POST">
                    <div class="form-group">
                        <label for="product-text">Product Name</label>
                        <input type="text" id="product-text" class="form-control" aria-describedby="product-text"
                            placeholder="Enter Name">
                    </div>
                    <div class="form-group">
                        <label for="product-category">Product Category</label>
                        <input type="text" id="product-category" class="form-control"
                            aria-describedby="product-category" placeholder="Enter Category">
                    </div>
                    <div class="form-group">
                        <label for="product-description">Product Description</label>
                        <textarea class="form-control" id="product-description" aria-describedby="product-description"
                            placeholder="Enter Description"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="product-price">Product Price</label>
                        <input type="text" id="product-price" class="form-control" aria-describedby="product-price"
                            placeholder="Enter Price">
                    </div>
                    <button id="submit" class="btn btn-primary float-right">Submit</button>
                </form>
                <h3>All Products:</h3>
                <ul id="product-list" class="list-group">
                    {{#each products}}
                    <li data-id="{{this.id}}" class="list-group-item">
                        <h5>Name: {{this.text}}</h5>
                        <h6>Category: {{this.category}}</h6>
                        <h6>Description: {{this.description}}</h6>
                        <h6>Price: {{this.price}}</h6>
                        <button class="btn btn-danger float-left delete">Delete Product</button>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>