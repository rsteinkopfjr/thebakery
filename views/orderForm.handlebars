<div id="home">
    <div class="container">
        <div class="row">
            <div class="col-8 offset-2">
                <h3>Order Form</h3>
                <br>
                <div>
                <a href="/">‚Üê Back To Dashboard</a>
                </div>
                <br>
                <h4>Place Your Order Below!</h4>
                <form class="clearfix mb-4" action="POST">
                    <div class="form-group">
                        <label for="example-text">Choose a Product</label>
                        <input type="text" id="example-text" class="form-control" aria-describedby="example-text"
                            placeholder="Enter First and Last Name (required)">
                    </div>
                    <div class="form-group">
                        <label for="example-category">Select Quantity</label>
                        <input type="text" id="example-category" class="form-control"
                            aria-describedby="example-category" placeholder="Enter Email (required)">
                    </div>
                    <button id="submit" class="btn btn-primary float-right">Add to Cart</button>
                </form>
                <h3>Cart:</h3>
                <ul id="example-list" class="list-group">
                    {{#each examples}}
                    <li data-id="{{this.id}}" class="list-group-item">
                            <h5>Name: {{this.text}}</h5>
                            <h6>Category: {{this.category}}</h6>
                            <h6>Description: {{this.description}}</h6>
                            <h6>Price: {{this.price}}</h6>
                        <button class="btn btn-danger float-right delete">Remove</button>
                    </li>
                    {{/each}}

                    <button id="submit" class="btn btn-primary float-right">Checkout</button>
                </ul>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>