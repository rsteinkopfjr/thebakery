<div id="home">
    <div class="container">
        <div class="row">
            <div class="col-8 offset-2">
                <h3>Order Form</h3>
                <br>
                <h4>Place Your Order Below!</h4>
                <form class="clearfix mb-4" action="POST">
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label for="order-first-name">First Name*</label>
                                <input type="text" id="order-first-name" class="form-control"
                                    aria-describedby="order-first-name" placeholder="First Name">
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label for="order-last-name"> Last Name*</label>
                                <input type="text" id="order-last-name" class="form-control"
                                    aria-describedby="order-last-name" placeholder="Last Name">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label for="order-email">Email*</label>
                                <input type="text" id="order-email" class="form-control" aria-describedby="order-email"
                                    placeholder="Email Adress">
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label for="order-phone">Phone*</label>
                                <input type="text" id="order-phone" class="form-control" aria-describedby="order-phone"
                                    placeholder="Phone Number">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label for="order-pick-date">Pickup Date*</label>
                                <input type="text" id="order-pick-date" class="form-control"
                                    aria-describedby="order-pick-date" placeholder="Date">
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label for="order-pick-time">Pickup Time*</label>
                                <input type="text" id="order-pick-time" class="form-control"
                                    aria-describedby="order-pick-time" placeholder="Time">
                            </div>
                        </div>
                    </div>
                    <div id="product-order-area">
                        <div class="form-group">
                            <label for="order-product">Choose a Product</label>
                            <select id="order-product" class="form-control" aria-describedby="order-product">
                                <option value="undefined">Available Products</option>
                                {{#each examples}}
                                <option value="{{this.text}}">{{this.text}} - ${{this.price}} each</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="order-quantity">Enter Quantity</label>
                            <input type="text" id="order-quantity" class="form-control"
                                aria-describedby="order-quantity" placeholder="Enter Amount">
                        </div>
                    </div>
                    {{!-- <div id="product-order-area-two"></div>
                    <div>
                        <button id="addProduct" class="btn btn-secondary btn-sm float-right">+</button>
                    </div> --}}
                    <br><br>
                    <div>
                        <button id="placeOrder" class="btn btn-success float-right">Place Order</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>