        </nav>
    </div>
    {{!-- Main Content --}}
    <div class="mainContent">
        <div class="container">
            {{!-- Menu --}}
            <div class="row">
                <div class="menu-container col-12">
                    <img src="/images/bake-baker-bakery-1251179.jpg" alt="baker" width="100%">
                    <div class="centered">
                        <h2>MENU</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div id="menu-list" class="col-12">
                    {{#each products}}
                    <ul class="menu-item" data-id="{{this.id}}" style="list-style-type: none">
                        <li>{{this.text}}</li>
                        <li>{{this.description}}</li>
                        <p>${{this.price}}.00</p>
                    </ul>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>

